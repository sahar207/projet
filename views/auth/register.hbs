<div class="auth-container">
  <div class="auth-card">
    <h2>Inscription</h2>
    <form action="/register" method="POST">
      <div class="form-group">
        <label for="nom_complet">Nom complet</label>
        <input type="text" id="nom_complet" name="nom_complet" placeholder="Nom complet" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Email" required>
      </div>
      <div class="form-group">
        <label for="mot_de_passe">Mot de passe</label>
        <input type="password" id="mot_de_passe" name="mot_de_passe" placeholder="Mot de passe" required>
      </div>
      <div class="form-group">
        <label for="telephone">Téléphone</label>
        <input type="tel" id="telephone" name="telephone" placeholder="Téléphone" required>
      </div>
      <div class="form-group">
        <label for="nationalite">Nationalité</label>
        <select id="nationalite" name="nationalite" required>
          <option value="Tunisienne">Tunisienne</option>
          <option value="Autre">Autre</option>
        </select>
      </div>
      <div class="form-group">
        <label for="role">Type de compte</label>
        <select id="role" name="role" required>
          <option value="TOURISTE">Touriste</option>
          <option value="GUIDE">Guide</option>
           <option value="ADMIN">Admin</option>
        </select>
      </div>
      <div class="form-group">
  <label>Code Admin (si Admin)</label>
  <input type="password" name="admin_code" class="form-control">
</div>

      <button type="submit" class="btn">S'inscrire</button>
    </form>
    <p class="auth-link">
      Déjà un compte? <a href="/login">Se connecter</a>
    </p>
  </div>
</div>

